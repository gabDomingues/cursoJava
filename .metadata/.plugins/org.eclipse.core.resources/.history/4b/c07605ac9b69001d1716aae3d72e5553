import java.util.Scanner;
public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int valor = 50;
		int minutos;
		float resultado = 0;
		System.out.println("Digite quantos minutos ");
		minutos = sc.nextInt();
		
		if(minutos<100) {
			resultado = valor;
		}
		else if(minutos>100) {
			minutos -= 100;
			resultado = minutos * 2;
			resultado += 50;
		}
		System.out.printf("VocÃª vai pagar R$ %.2", resultado);
		sc.close();
	}

}
